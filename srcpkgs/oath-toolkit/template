pre_configure() {
	autoreconf -fi
}

oath-toolkit-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove usr/lib/*.a
		vmove usr/lib/*.so
		vmove usr/share/man/man3
		vmove usr/share/gtk-doc
	}
}
